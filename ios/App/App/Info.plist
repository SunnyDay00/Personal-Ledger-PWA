<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- 开发区域 (通常保持为 en) -->
	<key>CFBundleDevelopmentRegion</key>
	<string>en</string>

	<!-- APP 显示名称 (在手机桌面上看到的名字) -->
	<key>CFBundleDisplayName</key>
	<string>个人记账本</string>

	<!-- 可执行文件名 (通常使用默认变量，不要修改) -->
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>

	<!-- Bundle ID (APP 的唯一标识符，不要修改) -->
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

	<!-- Info.plist 格式版本 (不要修改) -->
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>

	<!-- APP 内部名称 (通常使用默认变量，不要修改) -->
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>

	<!-- 包类型 (APPL 代表应用程序，不要修改) -->
	<key>CFBundlePackageType</key>
	<string>APPL</string>

	<!-- 版本号 (用户可见的主版本号，如 1.0.0) -->
	<key>CFBundleShortVersionString</key>
	<string>6.0.0</string>

	<!-- 构建版本号 (开发者内部使用的构建次数，如 1, 2, 3...) -->
	<key>CFBundleVersion</key>
	<string>1</string>

	<!-- 是否仅支持 iPhone OS (iOS) -->
	<key>LSRequiresIPhoneOS</key>
	<true />

	<!-- 启动屏幕 Storyboard 文件名 -->
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>

	<!-- 主界面 Storyboard 文件名 -->
	<key>UIMainStoryboardFile</key>
	<string>Main</string>

	<!-- 设备硬件能力要求 (如 armv7 架构) -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
	</array>

	<!-- 支持的屏幕方向 (iPhone) -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<!-- 竖屏 -->
		<string>UIInterfaceOrientationPortrait</string>
		<!-- 横屏 (左) -->
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<!-- 横屏 (右) -->
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- 支持的屏幕方向 (iPad) -->
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- 是否由 View Controller 控制状态栏外观 -->
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true />

    <!-- URL Scheme 配置 (用于快捷指令唤起) -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.personal.ledger.pwa</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>personalledger</string>
            </array>
        </dict>
    </array>

    <!-- 桌面长按快捷菜单 (3D Touch / Haptic Touch) -->
    <key>UIApplicationShortcutItems</key>
    <array>
        <dict>
            <key>UIApplicationShortcutItemType</key>
            <string>add_transaction</string>
            <key>UIApplicationShortcutItemTitle</key>
            <string>记一笔</string>
            <key>UIApplicationShortcutItemIconType</key>
            <string>UIApplicationShortcutIconTypeCompose</string>
        </dict>
    </array>
</dict>
</plist>
